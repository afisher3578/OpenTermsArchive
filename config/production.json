{
  "services": {
    "declarationsPath": "../ota-services-all/declarations",
    "documentTypesPath": "../ota-services-all/document-types.json"
  },
  "recorder": {
    "versions": {
      "storage": {
        "git": {
          "path": "../ota-versions",
          "publish": false,
          "prefixMessageToSnapshotId": "This version was recorded after filtering snapshot from MongoDB with id: ",
          "author": {
            "name": "Open Terms Archive Bot",
            "email": "bot@opentermsarchive.org"
          }
        }
      }
    },
    "snapshots": {
      "storage": {
        "mongo": {
          "connectionURI": "mongodb://localhost:27017",
          "database": "open-terms-archive",
          "collection": "snapshots"
        }
      }
    }
  },
  "logger": {
    "sendMailOnError": {
      "to": "admin@opentermsarchive.org",
      "from": "noreply@opentermsarchive.org",
      "sendWarnings": false
    }
  }
}
